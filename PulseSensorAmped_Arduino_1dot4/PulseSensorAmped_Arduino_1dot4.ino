void loop()
{
  digitalWrite(7, HIGH); // Flash a light to show transmitting
  readSensor();
  vw_send((uint8_t *)b, 2);
  vw_wait_tx(); // Wait until the whole message is gone
  
  digitalWrite(7, LOW);
  delay(2000);
}

